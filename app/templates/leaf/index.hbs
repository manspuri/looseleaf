<div class="small-12 medium-2 large-1 columns">
  <nav class="icon-bar medium-vertical three-up">
    {{#link-to "leaf.edit" model class="item"}}
      <i class="fa fa-edit"></i>
      <label>Edit</label>
    {{/link-to}}

    <a href="#" class="item" {{action "delete" model}}>
      <i class="fa fa-remove"></i>
      <label>Delete</label>
    </a>

    <a href="#" class="item" {{action "back"}}>
      <i class="fa fa-arrow-circle-left"></i>
      <label>Back</label>
    </a>
  </nav>
</div>

<div class="small-12 medium-10 large-11 columns">
  <article>
    <h1>{{title}}</h1>
    {{parse-markdown body}}
  </article>

  {{#if tags}}
    <h4>Tags</h4>
    <ul class="inline-list">
      {{#each tags}}
        <li><span class="label secondary radius med">{{this.tag}}</span></li>
      {{/each}}
    </ul>
  {{/if}}
</div>
