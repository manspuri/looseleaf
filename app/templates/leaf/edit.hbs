<div class="small-3 medium-2 large-1 columns">
  <nav class="icon-bar vertical three-up">
    <a href="#" class="item" {{action "save" model}}>
      <i class="fa fa-save"></i>
      <label>Save</label>
    </a>

    <a href="#" class="item" {{action "reload" model}}>
      <i class="fa fa-refresh"></i>
      <label>Reload</label>
    </a>

    <a href="#" class="item" {{action "cancel" model}}>
      <i class="fa fa-edit"></i>
      <label>Cancel</label>
    </a>
  </nav>
</div>

<div class="small-9 medium-10 large-11 columns">
  <section class="small-12 large-6 columns">
    <span class="label">Edit</span>
    <div class="fieldset">
      <form>
        <div class="row">
          <div class="small-12 medium-6 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <label class="prefix" for="title">Title</label>
              </div>

              <div class="small-9 columns">
                {{input type="text" value=title id="title" placeholder="Title"}}
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-6 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <a {{action "addTag"}} href="#" class="button prefix" for="tags"><i class="fa fa-plus-circle"></i> Tag</a>
              </div>

              <div class="small-9 columns">
                {{input type="text" value=selectedTag list="matching-tags" autocomplete="off"}}

                <datalist id="matching-tags">
                {{#each obj in matchingTags}}
                  <option {{bind-attr value=obj.tag}}>
                {{/each}}
                </datalist>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="small-12 columns">
            <ul class="inline-list">
              {{#each tags}}
                <li class="label secondary radius">
                  <span><i class="fa fa-remove clickable" {{action "removeTag" this}}></i> {{this.tag}}</span>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="small-12 columns">
            {{#view "view-attachment" context=model}}
              <a href="#" class="button tiny" {{action "attach" target=view}}>
                <i class="fa fa-paperclip"></i> Attach
              </a>
            {{/view}}
          </div>
        </div>

        {{#if attachments}}
        <div class="row">
          <div class="small-12 columns">
            <ul class="no-bullet">
            {{#each attachment in attachments}}
              <li>
                <i class="fa fa-times-circle clickable" {{action "deleteAttachment" attachment}}></i>
                {{linkto-attachment attachment}}
              </li>
            {{/each}}
            </ul>
          </div>
        </div>
        {{/if}}

        <div class="row">
          <div class="small-12 columns">
            <label class="label">Body</label>
            {{view "view-editor" value=body}}
          </div>
        </div>
      </form>
    </div>
  </section>

  <section class="small-12 large-6 columns">
    <span class="label">Preview</span>
    <div class="panel fix-height">
      <article>
        <h1>{{title}}</h1>
        {{parse-markdown body}}
      </article>
    </div>
  </section>
</div>
