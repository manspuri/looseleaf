<div class="small-12 medium-2 large-1 columns">
  <nav class="icon-bar medium-vertical two-up">
    <a href="#" class="item" {{action "new"}}>
      <i class="fa fa-plus-circle"></i>
      <label>New</label>
    </a>

    {{#link-to "" class="item"}}
      <i class="fa fa-search"></i>
      <label>Find</label>
    {{/link-to}}
  </nav>
</div>

<div class="small-12 medium-10 large-11 columns">
  <section>
    <ul class="fa-ul">
    {{#each leaf in content}}
      <li>
        {{#link-to "leaf" leaf.id}}
        <i class="fa-li fa fa-leaf"></i>
          {{#if leaf.title}}
            {{leaf.title}}
          {{else}}
            No title
          {{/if}}
        {{/link-to}}
      </li>
    {{/each}}
    </ul>
  </section>
</div>
