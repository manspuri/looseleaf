<div class="small-9 medium-10 large-11 columns">
  <section>
    {{#each content}}
      <h3>{{this.tag}}</h3>

      {{#each this.leaves}}
        <ul class="large-block-grid-6">
          <li class="clickable text-center">
            <div class="block">
              <i class="fa fa-leaf large"></i>
              {{#link-to "leaf" this}}
                {{#if this.title}}
                  {{this.title}}
                {{else}}
                  No title
                {{/if}}
              {{/link-to}}
            </div>
          </li>
        </ul>
      {{/each}}
    {{/each}}
  </section>
</div>
